<%- include('../../fragments/header.ejs') %>

<main>
    <h2>New guest</h2>
    <form class="form" action="/guests/details/1">
        <label for="firstName">First name: <span class="form__symbol-required">*</span></label>
        <input type="text" name="firstName" id="firstName" required/>
        <span class="form__error" id="errorFirstName"></span>

        <label for="lastName">Last name: <span class="form__symbol-required">*</span></label>
        <input type="text" name="lastName" id="lastName" required/>
        <span class="form__error" id="errorLastName"></span>

        <label for="email">Email: <span class="form__symbol-required">*</span></label>
        <input type="email" name="email" id="email" required/>
        <span class="form__error" id="errorEmail"></span>

        <label for="phoneNumber">Phone number: <span class="form__symbol-required">*</span></label>
        <input type="text" name="phoneNumber" id="phoneNumber" required/>
        <span class="form__error" id="errorPhoneNumber"></span>

        <label for="dateBirth">Date of birth: <span class="form__symbol-required">*</span></label>
        <input type="date" name="dateBirth" id="dateBirth" required/>
        <span class="form__error" id="errorDateBirth"></span>

        <label for="discountPercent">Discount percent: </label>
        <input type="number" name="discountPercent" id="discountPercent" min="0" max="20"/>
        <span class="form__error" id="errorDiscountPercent"></span>

        <div class="form__footer">
            <input class="button button--success hoverable" type="submit" value="Create"/>
            <a class="button button--secondary hoverable" href="/guests">Cancel</a>
        </div>
    </form>
</main>

<%- include('../../fragments/footer.ejs') %>
